@using DoctorOffice.Models

<h1>Doctors</h1>

@if (@Model.Count == 0)
{
  <h4>No doctors have been added to this list</h4>
  <h5>Please add one in the link below</h5>
}

<ul>
  @foreach(Doctor doctor in Model)
  {
    <li>@Html.ActionLink($"{doctor.Name}", "Details", new { id = doctor.DoctorId })</li>
  }
</ul>

@if (@Model.Count == 0)
{
  <p>@Html.ActionLink("Add first doctor", "Create")</p>
}
else
{
 <p>@Html.ActionLink("Add new doctor", "Create")</p> 
}
<p>@Html.ActionLink("Home", "Index", "Home")</p>