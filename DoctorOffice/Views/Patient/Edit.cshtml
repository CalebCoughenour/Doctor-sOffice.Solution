@model DoctorOffice.Models.Patient

<h4>Edit Patient: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })

  @Html.Label("Appointment Date")
  @Html.TextBoxFor(model => model.ApptDate, new { required = "required", @type = "date" })

  @Html.Label("Birth Date")
  @Html.TextBoxFor(model => model.Birthdate, new { required = "required", @type = "date" })

  @Html.Label("Select Doctor")
  @Html.DropDownList("DoctorId")

  <input type="submit" value="Add Patient" class="btn btn-default" />
}
<p>@Html.ActionLink("Back to Doctors", "Index")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>